<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="product_template_form_view_campos" model="ir.ui.view">
            <field name="name">product.template.form.inherit.campos.template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="name">Product Template</attribute>
                </xpath>
                <field name="categ_id" position="after">
                    <field name="SkuPadre"/>
                    <field name="CodigoProveedor"/>
                    <field name="DescripcionCorta"/>
                    <field name="Descripcion"/>
                    <field name="Etiqueta"/>
                    <field name="TipoTalla"/>
                </field>
            </field>
        </record>
</odoo>
